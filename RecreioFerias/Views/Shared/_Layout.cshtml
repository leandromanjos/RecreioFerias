<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RecreioFerias</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RecreioFerias.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <script src="~/js/limparinput.js"></script>
    <link href="~/css/pagedlist.css" rel="stylesheet" />
    @using Microsoft.AspNetCore.Authentication
    @using Microsoft.AspNetCore.Authorization
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Recreio nas Férias</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link toolbar-item" asp-area="" asp-controller="Alunos" asp-action="Index">ALUNOS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link toolbar-item" asp-area="" asp-controller="Turmas" asp-action="Index">TURMAS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link toolbar-item" asp-area="" asp-controller="Matriculas" asp-action="Index">MATRICULAS</a>
                        </li>
                       @*  <li class="nav-item">
                            <a class="nav-link toolbar-item" asp-area="" asp-controller="Frequencias" asp-action="Index">FREQUÊNCIA</a>
                        </li> *@
                        @* <li class="nav-item dropdown toolbar-item">
                            <a class="nav-link dropdown-toggle" href="#" id="menuDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                RELATÓRIOS
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="menuDropdown">
                                <li><a class="dropdown-item" href="/Relatorios">Alunos por Turma</a></li>
                                <li><a class="dropdown-item" href="/Relatorios">Quantidade Total</a></li>
                                <li><a class="dropdown-item" href="/Relatorios">Quantidades</a></li>

                            </ul>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link toolbar-item" asp-area="" asp-controller="Operadores" asp-action="Index">OPERADORES</a>
                        </li>
                    </ul>
                        <ul class="navbar-nav me-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link">Bem-vindo, @User.Identity.Name!</span>
                            </li>
                            <li class="nav-item">
                                <form asp-action="Logout" asp-controller="Home" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-link nav-link" style="text-decoration: none;">Sair</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; <span id="year"></span> - Recreio nas Férias
        </div>
    </footer>
    <script>
        // Obtém o ano atual dinamicamente e insere no elemento com ID "year"
        document.getElementById("year").textContent = new Date().getFullYear();
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
