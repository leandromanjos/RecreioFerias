@model RecreioFerias.Models.Operador

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar Operador</h1>
<br />
<hr />
<div class="container">


    <div class="card">
        <div class="card-heading d-flex justify-content-between bg-warning text-white">
            <div class="info-esquerda"> <h5><i class="bi bi-file-earmark-plus"></i>Editar Operador</h5></div>
            <div class="info-direita"><b>*</b> Campos Obrigatórios</div>
        </div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OperadorId" />

            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-2">
                        <label><b>Login: </b></label>
                    </div>
                    <div class="col-md-3">
                        <input asp-for="Login" class="form-control" />
                        <span asp-validation-for="Login" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="row mb-3">
                    <div class="col-md-2">
                        <label><b>Senha: </b></label>
                    </div>
                    <div class="col-md-3 d-flex align-items-center">
                        <input asp-for="Senha" class="form-control" id="senhaInput" value="" placeholder="Digite uma nova senha" />
                       @*  <input type="password" class="form-control" id="senhaInput" name="Senha" value="@Model.Senha" /> *@
                        <span asp-validation-for="Senha" class="text-danger"></span>
                        <button type="button" class="btn btn-outline-secondary ms-2" onclick="toggleSenha('senhaInput', 'senhaIcon')">
                            <i class="bi bi-eye" id="senhaIcon"></i>
                        </button>
                    </div>
                    <div class="col-md-2">
                        <label><b>Comparar Senha: </b></label>
                    </div>
                    <div class="col-md-3 d-flex align-items-center">
                        <input asp-for="CompararSenha" class="form-control" id="compararSenhaInput" />
                        <span asp-validation-for="CompararSenha" class="text-danger"></span>
                        <button type="button" class="btn btn-outline-secondary ms-2" onclick="toggleSenha('compararSenhaInput', 'compararSenhaIcon')">
                            <i class="bi bi-eye" id="compararSenhaIcon"></i>
                        </button>
                    </div>
                </div>

                <br />
                <div class="row mb-3">

                    <div class="col-md-2">
                        <label><b>Situação do Operador: </b></label>
                    </div>
                    <div class="col-md-3">
                        <select asp-for="Situacao" class="form-control">
                            <option value="true">Ativo</option>
                            <option value="false">Inativo</option>
                        </select>

                    </div>
                    <span asp-validation-for="Situacao" class="text-danger"></span>
                </div>


            </div>
            <div class="card-footer">
                <div class="form-group">
                    <button class="btn btn-warning" type="submit" value="Save">
                        <i class="bi bi-pencil" style="vertical-align: middle; border:1px; color:white;"></i>&#32 Editar
                    </button>
                    &#32&#32&#32&#32
                    <a asp-action="Index" class="btn btn-outline-secondary small" style="color:darkgray">
                        <i class="bi bi-arrow-left-square"></i>&#32 <b>Voltar</b>
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    <script>
        function toggleSenha(inputId, iconId) {
            var senhaInput = document.getElementById(inputId);
            var senhaIcon = document.getElementById(iconId);
            if (senhaInput.type === "password") {
                senhaInput.type = "text";
                senhaIcon.classList.remove("bi-eye");
                senhaIcon.classList.add("bi-eye-slash");
            } else {
                senhaInput.type = "password";
                senhaIcon.classList.remove("bi-eye-slash");
                senhaIcon.classList.add("bi-eye");
            }
        }
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
