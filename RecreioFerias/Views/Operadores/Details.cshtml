@model RecreioFerias.Models.Operador

@{
    ViewData["Title"] = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhes da Operador</h1>

<br />
<hr />

<div class="container">


    <div class="card">
        <div class="card-heading d-flex justify-content-between bg-primary text-white">
            <div class="info-esquerda"> <h5><i class="bi bi-file-earmark-plus"></i>Detalhes do Operador</h5></div>
            <div class="info-direita"><b>*</b> Campos Obrigatórios</div>
        </div>
        <div class="card-body">
            <div class="row mb-3">

                <div class="col-md-3">
                    <label class="col-sm"><b>Login: </b></label>
                </div>
                <div class="col-md-3">
                    <input asp-for="Login" class="form-control" disabled />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label class="col-sm"><b>Senha: </b></label>
                </div>
                <div class="col-md-3">
                    <input type="text" value="******" class="form-control" disabled />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3">
                    <label class="col-sm"><b>Situação: </b></label>
                </div>
                <div class="col-md-3">
                    @((Model.Situacao) ? "Ativo" : "Inativo")
                    <span asp-validation-for="Situacao" class="text-danger"></span>
                </div>
        
            </div>
            <div class="card-footer">
                <div class="form-group">
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model?.OperadorId">
                        <i class="bi bi-pencil" style="vertical-align: middle; border:1px; color:white;"></i>
                        &#32 Editar
                    </a>
                    &#32&#32&#32&#32
                    <a asp-action="Index" class="btn btn-outline-secondary small" style="color:darkgray">
                        <i class="bi bi-arrow-left-square"></i>&#32 <b>Voltar</b>
                    </a>
                </div>
            </div>
        </div>

    </div>
