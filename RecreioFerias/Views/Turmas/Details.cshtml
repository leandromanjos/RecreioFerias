@model RecreioFerias.Models.Turma

@{
    ViewData["Title"] = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhes da Turma</h1>

<br />
<hr />

<div class="container">


    <div class="card">
        <div class="card-heading d-flex justify-content-between bg-primary text-white">
            <div class="info-esquerda"> <h5><i class="bi bi-file-earmark-plus"></i>Detalhes da Turma</h5></div>
            <div class="info-direita"><b>*</b> Campos Obrigatórios</div>
        </div>

        <div class="card-body">
            <div class="row mb-3">

                <div class="col-md-3">
                    <label class="col-sm"><b>Quantidade Total de Alunos: </b></label>
                </div>
                <div class="col-md-3">
                    <input asp-for="QuantidadeAlunos" class="form-control" disabled/>
                    <span asp-validation-for="QuantidadeAlunos" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label class="col-sm"><b>Cor da Turma: </b></label>
                </div>
                <div class="col-md-3">
                    <input asp-for="Descricao" class="form-control" disabled />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3">
                    <label class="col-sm"><b>Idade Máxima: </b></label>
                </div>
                <div class="col-md-3">
                    <input asp-for="IdadeMaxima" class="form-control" disabled />
                    <span asp-validation-for="IdadeMaxima" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label class="col-sm"><b>Idade Mínima: </b></label>
                </div>
                <div class="col-md-3">
                    <input asp-for="IdadeMinima" class="form-control" disabled />
                    <span asp-validation-for="IdadeMinima" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="form-group">
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model?.TurmaId">
                    <i class="bi bi-pencil" style="vertical-align: middle; border:1px; color:white;"></i>
                        &#32 Editar
                </a>
                &#32&#32&#32&#32
                <a asp-action="Index" class="btn btn-outline-secondary small" style="color:darkgray">
                    <i class="bi bi-arrow-left-square"></i>&#32 <b>Voltar</b>
                </a>
            </div>
        </div>
</div>
   
</div>
